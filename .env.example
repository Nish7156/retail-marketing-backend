# Server
PORT=3000
NODE_ENV=development

# Database (matches docker-compose)
DATABASE_URL="postgresql://retail:retail_secret@localhost:5434/retail_marketing?schema=public"

# JWT
JWT_ACCESS_SECRET=your-access-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookie (for refresh token cookie)
COOKIE_REFRESH_MAX_AGE=604800
COOKIE_ACCESS_MAX_AGE=900

# CORS (frontend origin for credentials)
FRONTEND_ORIGIN=http://localhost:5173
